<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/delete_data"
        android:layout_width="fill_parent"
        android:layout_height="40dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/data_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.07"
            android:text="1."
            android:textColor="#000033"
            android:textSize="12dp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/listview_item_title_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.6"
            android:text="กระจับต้ม 70 กรัม"
            android:textColor="#000033"
            android:textSize="12dp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/data_number_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.10"
            android:textColor="#000033"
            android:textSize="12dp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/listview_item_title_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.30"
            android:text="80 กิโลแคลอรี่"
            android:textColor="#000033"
            android:textSize="12dp"
            android:typeface="serif" />

        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="0.10"
            android:src="@mipmap/ic_launcher_delete" />
    </LinearLayout>

</LinearLayout>